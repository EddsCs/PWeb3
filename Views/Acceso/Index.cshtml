@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteAcceso.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyect_web_def.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <div class="col-sm-4 col-sm-offset-4" style="background-color: #93B1A6; padding: 20px;">

            <form action="@Url.Action("Index","Acceso")" method="post">
                <h1>LOGIN</h1>
                <div class="form-group">
                    <label>Correo:</label>
                    <input class="form-control" type="email" name="correo" />
                </div>

                <div class="form-group">
                    <label>Contraseña:</label>
                    <input class="form-control" type="password" name="clave" />
                </div>

                <button type="submit" class="btn btn-success">Ingresar</button>
            </form>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
