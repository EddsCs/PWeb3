@model IEnumerable<Proyect_web_def.Models.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color: #93B1A6;">
<h1>Index</h1>

<p>
        <a class="btn btn-primary" asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Clave)
            </td>
            <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PedidoID">Editar</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.PedidoID">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PedidoID">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
