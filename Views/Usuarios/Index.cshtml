@model IEnumerable<Proyect_web_def.Models.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-color: #93B1A6;">
    <h1>Index</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>

    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clave)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol.NombreRol)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.UsuarioID">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.UsuarioID">Details</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UsuarioID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
